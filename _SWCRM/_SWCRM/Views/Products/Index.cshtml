@model IEnumerable<_SWCRM.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardCrm.cshtml";
}

<div class="pageheader">
    <h3><i class="fa fa-shopping-cart"></i> Ürünler</h3>
</div>
<div class="contentpanel">
    <div class="row">
        <div class="col-sm-12 col-md-9 col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading pt10 pb5">
                    <div class="row">
                        <button type="button" class="btn btn-success btn-sm pull-right"><i class="glyphicon glyphicon-plus"></i> @Html.ActionLink("Ürün Ekle", "ProductCreate", null, new { @style = "color:white" }) </button>
                    </div>
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Currency.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Brand.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Situation.Status)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Currency.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Brand.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Situation.Status)
                            </td>
                            <td>
                                <span class="label label-success">   <i class="fa fa-pencil"></i> @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @style = "color:white" })  </span> &nbsp;&nbsp;
                                <span class="label label-danger">    <i class="fa fa-trash-o"></i> @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @style = "color:white" })</span>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        <div class="col-sm-12 col-md-3 col-lg-2">
            <div class="panel">
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.TextBox("aranacakKelime")
                        
                        <div class="mb20"></div>
                        <input type="submit" class="btn btn-primary btn-sm " value="Filtrele" />
                        <input type="reset" class="btn btn-danger btn-sm " value="Sıfırla" />
                    }
                </div><!-- panel-body -->
            </div><!-- panel -->
        </div>
    </div>
</div>
